@model FortuneSystem.Models.POSummary.POSummary

@{
    ViewBag.Title = "ListarTallasPorGenero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-right">
                <input type="button" value="Add Product" class="btn btn-primary" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <table class="table table-condensed table-hover">
                    <tr>
                        <th>
                            ID TALLA
                        </th>
                        <th>
                            TALLA
                        </th>
                    </tr>
                    @{
                        //To make unique Id
                      
                        for (int i = 0; i < Model.ListarTallasPorGenero.ToList().Count(); i++)
                        {
                            

                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.ListarTallasPorGenero[i].CatTallaItem.Id, new { @id = "ItemCode_" + i })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.ListarTallasPorGenero[i].CatTallaItem.Talla, new { @id = "ProductName_" + i })
                                </td>
                            </tr>
                           
                        }
                    }
                    </table>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Place Order" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
