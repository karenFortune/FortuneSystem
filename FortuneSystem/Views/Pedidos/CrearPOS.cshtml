@model FortuneSystem.Models.Pedidos.OrdenesCompra

@{
    ViewBag.Title = "CrearPO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h2>Recepci&oacute;n de Orden de Compra</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="active">
                <a class="nav-link active" id="po-tab" data-toggle="tab" href="#po" role="tab" aria-controls="po" aria-selected="true">PO</a>
            </li>
            <li>
                <a  id="items-tab" data-toggle="tab" href="#items" role="tab" aria-controls="items" aria-selected="false">Items</a>
            </li>
            <li>
                <a  id="tallas-tab" data-toggle="tab" href="#tallas" role="tab" aria-controls="tallas" aria-selected="false">Tallas</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade in active" id="po" role="tabpanel" aria-labelledby="po-tab">
                <div class="form-row">
                    <div class="form-group col-sm-4">
                        @Html.LabelFor(model => model.PO, htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.PO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PO, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-4">
                        @Html.LabelFor(model => model.VPO, htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.VPO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.VPO, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-4">
                        @Html.LabelFor(model => model.FechaCancel, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.FechaCancel, new { htmlAttributes = new { @class = "form-control date-picker" } })
                        @Html.ValidationMessageFor(model => model.FechaCancel, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-4">
                        @Html.LabelFor(model => model.FechaOrden, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.FechaOrden, new { htmlAttributes = new { @class = "form-control date-picker" } })
                        @Html.ValidationMessageFor(model => model.FechaOrden, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-4">
                        @Html.LabelFor(model => model.Cliente, htmlAttributes: new { @class = "control-label " }) <br />
                        @Html.DropDownList("listCliente", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewData["listCliente"], new { @class = "form-control custom-select-lg", @id = "selectCliente", @name = "state" })
                        @Html.ValidationMessageFor(model => model.Cliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-4">
                        @Html.LabelFor(model => model.ClienteFinal, htmlAttributes: new { @class = "control-label" }) <br />
                        @Html.DropDownList("listClienteFinal", (IEnumerable<System.Web.Mvc.SelectListItem>)ViewData["listClienteFinal"], new { @class = "form-control", @id = "selectClienteFinal", @name = "state" })
                        @Html.ValidationMessageFor(model => model.ClienteFinal, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-sm-12">
                        @Html.LabelFor(model => model.TotalUnidades, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.TotalUnidades, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TotalUnidades, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group row">
                        <div class="text-center margin-bottom col-sm-12">
                            <a href="#" id="siguienteInfoItems" class="btn btn-primary">Siguiente</a>
                            <input type="submit" value="Registrar" class="btn btn-success" />
                        </div>
                    </div>
                    <!--<div class="form-group row">
        <div class="col-sm-10">
        <input type="submit" value="Registrar" class="btn btn-success" />
        </div>
    </div>-->
                </div>
            </div>
            <div class="tab-pane fade in" id="items" role="tabpanel" aria-labelledby="items-tab">
              
              @Html.Partial("~/Views/Items/CrearItems.cshtml")
                <div class="form-group row">
                    <div class="text-center margin-bottom col-sm-12">
                        <a href="#" id="anteriorPO" class="btn btn-primary">Anterior</a>
                        <a href="#" id="siguienteInfoTallas" class="btn btn-primary">Siguiente</a>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade in" id="tallas" role="tabpanel" aria-labelledby="tallas-tab">
                INFORMACI&Oacute;N DE TALLAS
                <div class="form-group row">
                    <div class="text-center margin-bottom col-sm-12">
                        <a href="#" id="anteriorItems" class="btn btn-primary">Anterior</a>    
                        <input type="submit" value="Registrar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
       
    </div>

    }

    <div>
        @Html.ActionLink("Regresar", "CrearPO")
    </div>
    

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    
